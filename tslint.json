{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-airbnb",
    "tslint-react-hooks"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "max-len": ["error", 120],
    "object-curly-newline": "off",
    "quotemark": {
      "options": [
        "jsx-double",
        "single"
      ]
    },
    "interface-name": [
      true,
      "never-prefix"
    ],
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "jsx-alignment": true,
    "array-type": false,
    "member-access": false,
    "member-ordering": false,
    "no-console": {
      "severity": "warning"
    },
    "indent": [
      true,
      "spaces",
      2
    ],
    "jsx-no-lambda": true,
    "tsx-filename-extension": true,
    "jsx-closing-bracket-location": true,
    "jsx-closing-tag-location": true,
    "no-multi-spaces": true,
    "jsx-tag-spacing": true,
    "jsx-boolean-value": false,
    "alt-text": true
  }
}
